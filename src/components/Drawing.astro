---
import { createRadiator } from '../utils/drawingUtils';

const { width = 200, height = 100, depth = 50, parameters } = Astro.props;

const drawing = createRadiator(width, height, depth);
---

<svg 
    viewBox={`-20 -40 ${width+150} ${height+80}`} 
    xmlns='http://www.w3.org/2000/svg' 
    height="300px"
    style="max-width: 100%; height: auto"
>
    <Fragment set:html={drawing} />
</svg>