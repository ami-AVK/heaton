---
import { createRadiator } from '../utils/drawingUtils';
import type { Product } from '../types/common';
import ImageDynamic from './ImageDynamic.astro';
import RadiatorDrawing from './drawings/RadiatorDrawing.astro';
import FloorDrawing from './drawings/FloorDrawing.astro';
import InFloorDrawing from './drawings/InFloorDrawing.astro';

interface Props {
    product: Product;
    category: string;
}

const { product, category } = Astro.props;
// const category = product['Категория'];
console.log(product);
---

{category === 'Стальные панельные радиаторы' && <RadiatorDrawing product={product}><slot/></RadiatorDrawing>}
{category === 'Напольные конвекторы' && <FloorDrawing product={product}><slot/></FloorDrawing>}
{category === 'Внутрипольные конвекторы' && <InFloorDrawing product={product}><slot/></InFloorDrawing>}
