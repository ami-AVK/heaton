---
import { Icon } from 'astro-icon/components';

interface ButtonProps {
	text: string;
	icon?: string;
	link?: string;
	type?: 'button' | 'submit' | 'reset' |'download';
	class?: string;
  }
  
  const { text, icon, type = 'button' ,link, class:className} = Astro.props as ButtonProps;
  const isDownload = type === 'download';
//   data-[current=true]:bg-secondary"
---
{
isDownload?
	<a
		href={link}		
		class="px-2 pr-3 py-1 text-sm font-medium text-neutral-700 border border-neutral-300 inline-flex items-center  hover:bg-neutral-100 focus:ring-1  outline-none focus:outline-[#ffeec9] rounded-xl text-center  justify-center tracking-widest"
		class:list={className}
	>
		{icon?<Icon name={icon} width="24"/>:""}
		{text}
	</a>
:
	<button
		type={type}
		class="px-2 pr-3 py-1 text-sm font-medium text-neutral-700 inline-flex items-center bg-neutral-200 hover:bg-neutral-100 focus:ring-1  outline-none focus:outline-[#ffeec9] rounded-xl text-center justify-center tracking-widest"
		class:list={className}
	>
		{icon?<Icon name={icon} width="24"/>:""}
		{text}
	</button>
}
