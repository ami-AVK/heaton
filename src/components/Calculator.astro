---
import InputNumber from "./Inputs/InputNumber.astro";
import RadioGroup from "./Inputs/RadioGroup.astro"

// значения кнопок для радиогрупп
const heights = [{buttonText:"2,5 м",value:2.5,checked:true},{buttonText:"3 м",value:3},{buttonText:"3,5 м",value:3}];
const insulation = [{buttonText:"Плохая",value:.2},{buttonText:"Средняя",value:0.5,checked:true},{buttonText:"Хорошая",value:1}];
const windows = [{buttonText:1,value:1},{buttonText:2,value:2,checked:true},{buttonText:3,value:3},{buttonText:4,value:4},{buttonText:5,value:5}];
const glazing = [{buttonText:"Одинарное",value:.2},{buttonText:"Двойное",value:1,checked:true}];

const {class:className} = Astro.props;
---
<section class="" class:list={className}>
    <div class="flex flex-col items-center gap-16 py-32 container-center text-neutral-600">
        <h2 class="text-6xl font-semibold header-circle-xl">Подбор радиаторов</h2>
        <div class="flex flex-col items-center justify-center flex-grow w-full gap-8 md:items-start lg:gap-32 md:flex-row">
            <div class="w-full px-8 md:w-auto md:px-0">
                <!-- <div class="px-8">
                    <label class="block">
                        <span class="text-xs font-bold leading-none tracking-wide text-gray-700 uppercase text-neutral-700">Площадь помещения</span>
                        <input type="range" class="block w-full mt-1">
                    </label>
                </div> -->
                <form class="pr-8">
                    <div class="relative mb-8">
                      <label for="area" class="block mb-2 text-sm font-bold text-gray-700">Площадь помещения</label>
                      <div class="flex items-center gap-4 md:max-w-md">
                        <span class="left-0 block px-3 py-1 text-base text-lg leading-none rounded-lg top-8 text-neutral-700 min-w-min whitespace-nowrap bg-neutral-50"><span>15</span> м²</span>
                        <input type="range" id="area" name="area" min="2" max="100" class="w-full" value=70>
                      </div>
                    </div>
                    <div class="mb-8">
                        <RadioGroup header="Высота помещения" name="height" values={heights}/>
                    </div>
                    <div class="mb-8">
                        <RadioGroup header="Теплоизоляция" name="insulation" values={insulation}/>
                    </div>
                    <div class="mb-8">
                        <RadioGroup header="Количество окон" name="windows" values={windows}/>
                    </div>
                    <div class="mb-8">
                        <RadioGroup header="Вид остекления" name="glazing" values={glazing}/>
                    </div>
                    <div class="relative mb-8">
                      <label for="area" class="block mb-2 text-sm font-bold text-gray-700">Минимальная температура</label>
                      <div class="flex items-center gap-4 md:max-w-md">
                        <span class="left-0 block px-3 py-1 text-base text-lg leading-none rounded-lg top-8 text-neutral-700 min-w-min whitespace-nowrap bg-neutral-50"><span>-5</span> °C</span>
                        <input type="range" id="area" name="area" min="2" max="100" class="w-full" value=70>
                      </div>
                    </div>
                    <!-- <div class="mb-8">
                      <label for="minTemp" class="block mb-2 text-sm font-bold text-gray-700">Минимальная температура</label>
                      <div class="flex items-center gap-4">
                        <InputNumber/>
                        <input type="range" id="minTemp" name="minTemp" min="-50" max="15" class="w-full" value=-10>
                      </div>
                      
                    </div> -->
                  </form>
            </div>
            <div class="w-full md:w-auto">
                <!-- RAW -->
                <div class="flex flex-col items-start justify-start gap-8 px-8 py-6 bg-neutral-50 rounded-2xl">
        
                    <div class="self-stretch text-neutral-700 text-base font-bold font-['Ubuntu'] uppercase leading-loose tracking-wider">Список подходящих радиаторов:</div>
                    <div class="flex flex-col items-center justify-start gap-2">
                      <div class="inline-flex items-start justify-start gap-4">
