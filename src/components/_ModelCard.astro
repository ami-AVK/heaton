---
import { Image } from "astro:assets"
const {name, subname, shortname, characteristics} = Astro.props;
import heater from "../img/heater_main.webp"
import Button from "./Button.astro";
---
<div class="border-neutral-200 border rounded-3xl w-full p-8 group/modelcard hover:bg-[#FFF] shadow-none transition-all hover:scale-105  will-change-auto hover:shadow-2xl">
    <div class="relative will-change-transform group-hover/modelcard:scale-105  transition-transform perspective-1000">
        <div class="transition-transform group-hover/modelcard:rotate-y-12 will-change-transform">
            <Image alt=`Изображение радиатора ${name}` src={heater} class=""/>
        </div>
        <span class="absolute -right-4 bottom-0 text-5xl leading-none font-black translate-z-12 transition-transform group-hover/modelcard:rotate-y-12 will-change-transform">{shortname}</span>
    </div>
    <h3 class="flex flex-col text-xl pt-4 min-h-20 justify-end">
        {
           subname?
           <span>{subname}</span>:""
        }
        <span class="font-black">{name}</span>
    </h3>
    <ul class="py-2 text-md pb-6">
    {
        characteristics.map((element:any)  => 

            (<li class="py-1">{element.name}</li>)
        )

    }
    </ul>
    <Button class=" w-full" text="Перейти в каталог"/>
</div>