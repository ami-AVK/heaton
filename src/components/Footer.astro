---
import Logo from '../svg/logo_big.svg';
import LogoSmall from '../svg/logo_small.svg';
import { Icon } from 'astro-icon/components';
interface FooterProps {
  links: { href: string; text: string }[];
}

const { links } = Astro.props as FooterProps;

const logoSrc = 'https://flowbite.com/docs/images/logo.svg';
const logoAlt = 'Heaton Logo';
const brandName = 'Heaton';
const copyrightText = 'Â© 2025';
const copyrightLink = { href: 'https://heaton.ru/', text: 'Heaton' };

const currentURL = new URL(Astro.request.url).pathname;
const mainpage = currentURL==="/";
---

<footer class="bg-stone-600">
  <div class="w-full max-w-5xl mx-auto p-4 md:py-8">
    <div class="sm:flex sm:items-center sm:justify-between">
      
        <div class="flex items-center gap-4">
            <a href="/" class=`cursor-pointer text-[#FCD47F] ${mainpage?"pointer-events-none":""}`>
              <Logo class="w-20 md:w-32 lg:w-40 hidden md:block"/>
              <LogoSmall class="w-16 md:hidden"/>
            </a>
            <div class="flex flex-col gap-2">
                <div class="flex gap-2 items-center text-stone-400">
                    <Icon name="Phone call" />
                    <div class="text-base leading-5 font-semibold relative  tracking-wider">8 499 645-00-00</div>
                </div>
                <div class="flex gap-2 items-center text-stone-400">
                    <Icon name="At sign" />
                    <div class="text-base leading-5 font-semibold relative  tracking-wider">retail@heaton.ru</div>
                </div>
            </div>
        </div>
        
 
      <ul class="flex flex-wrap items-center mb-6 text-sm font-medium text-stone-400 sm:mb-0 ">
        {links.map((link, index) => (
          <li key={index}>
            <a href={link.href} class="hover:underline me-4 md:me-6">{link.text}</a>
          </li>
        ))}
      </ul>
    </div>
    <hr class="my-6 sm:mx-auto border-stone-700 lg:my-8" />
    <span class="block text-sm  sm:text-center text-stone-400">
      {copyrightText} <a href={copyrightLink.href} class="hover:underline">{copyrightLink.text}</a>
    </span>
  </div>
</footer>
