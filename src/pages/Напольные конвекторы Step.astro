const mainImageDescription = "Стальной панельный радиатор Heaton в разрезе"
const features = [
  {
    "name": "Максимальное рабочее давление",
    "value": "10 Бар"
  },
  {
    "name": "Испытательное давление",
    "value": "15 Бар"
  },
  {
    "name": "Максимальная температура воды",
    "value": "120°С"
  },
  {
    "name": "Теплообменник",
    "value": "медно-алюминиевый (бесшовная труба диаметром 14мм, толщина стенки 0,5 мм)"
  },
  {
    "name": "Корпус",
    "value": "оцинкованная сталь 1мм"
  },
  {
    "name": "Анодирование",
    "value": "Натуральный алюминий, чёрный, золото, светлая бронза, темная бронза и любой цвет по RAL"
  },
  {
    "name": "Доступная глубина (высота)",
    "value": "80, 130, 180"
  },
  {
    "name": "Доступная ширина",
    "value": "130, 180"
  },
  {
    "name": "Доступная длина",
    "value": "500—3000 (шаг 100 мм)"
  },
  {
    "name": "Гарантия",
    "value": "10 лет"
  }
