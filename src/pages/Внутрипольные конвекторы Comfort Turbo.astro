    longName: "Comfort",
    sub: null,
    url: `${URL_category}Comfort/`,
    characteristics: [{ name: "Принудительная вентиляция", icon: false }],
    image: "floorComfort.webp",
  },
  {
    shortName: "",
    longName: "Comfort Turbo",
    sub: null,
    url: `${URL_category}Comfort Turbo/`,
    characteristics: [{ name: "Принудительная вентиляция", icon: true }],
