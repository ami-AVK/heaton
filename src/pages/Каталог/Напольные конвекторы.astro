---

import Layout from '../../layouts/main.astro'
import Hero from '../../components/Hero.astro';
import NavBar from '../../components/NavBar.astro';
import BreadCrumbs from '../../components/BreadCrumbs.astro';
import { Image } from "astro:assets"
import heater from "../../img/step.webp"
import factoid_images_models from "../../img/models.webp"
import factoid_images_toppanel from "../../img/top_panel.webp"
import Factoid from '../../components/Factoid.astro';
import { Icon } from 'astro-icon/components';
import Button from '../../components/Button.astro';
import ModelCard from '../../components/_ModelCard.astro';
import Calculator from '../../components/Calculator.astro';
import Socials from '../../components/Socials.astro';
import LogoSmall from '../../svg/logo_small.svg';
import Contact from '../../components/Contact.astro';

const URL_main = `${import.meta.env.BASE_URL}/`
const URL_category = `${URL_main}Каталог/Напольные конвекторы/`

const mainImageDescription = "Стальной панельный радиатор Heaton в разрезе"
---
<Layout title="Напольные конвекторы Heaton" description="Качественные панельные радиаторы от российского бренда" class="snap-y snap-mandatory">
    
    <Hero class="min-h-svh snap-center">
        <NavBar slot="navbar" class="mx-auto container-center py-8"/>
        <BreadCrumbs slot="breadcrumbs" list={
            [{url:URL_main, text:"Главная"},{url:URL_category, text:"Напольные конвекторы"}]
            }/>

        <Image alt={mainImageDescription} src={heater} slot="image"/>

        <Fragment slot="header">
            <Socials class="mb-6 md:mb-12 text-primary"/>
            <h1 class="text-6xl font-black uppercase">Напольные конвекторы</h1>
            <div class="mt-12 flex items-stretch gap-4 tracking-wider uppercase">
                <a class="px-8 py-2 text-xl rounded-lg text-neutral-50 bg-primary pt-8">Каталог</a>
                <div class="flex text-base font-medium  gap-4 items-end text-neutral-700">
                    <!-- <a href="#Models" class="px-4 py-2  rounded-lg  bg-neutral-100">Модели</a> -->
                    <a href="#Calculator" class="px-4 py-2 rounded-lg  bg-neutral-100">Калькулятор</a>
                </div>
            </div>
        </Fragment>

        <Fragment slot="extralinks">
            <ul class="flex gap-8">
                <li><a href="/#models" class="px-16 py-8 border border-primary rounded-2xl block">Модели</a></li>
                <li><a href="/#calculator" class="px-16 py-8 border border-primary rounded-2xl block">Калькулятор</a></li>
            </ul>
        </Fragment>

    </Hero>

    
        
        <!-- decoding -->
        <section class="snap-center min-h-svh flex flex-col container-center mx-auto ">
            <h2 class="text-3xl font-semibold md:text-6xl  mx-auto mt-16 md:mt-32 header-circle-lg md:header-circle-xl ">Расшифровка обозначения</h2>
            <div class="my-auto mx-auto relative ">
                <ul class="flex text-2xl gap-2 md:text-6xl font-black md:gap-4 p-16 py-24">
                    {
                        [
                            {value:"STEP",expand:"Модель",orientation:"data-bottom"},
                            {value:"130",expand:"Высота",orientation:"data-top"},
                            {value:"130",expand:"Глубина",orientation:"data-bottom"},
                            {value:"1500",expand:"Длина",orientation:"data-top"},
                            {value:"1",expand:"Количество рядов труб",orientation:"data-bottom"},
                            {value:"N",expand:"Наличие вент. вставки",orientation:"data-top"},
                            {value:"WT",expand:"Цвет корпуса",orientation:"data-bottom"},
                            {value:"LG",expand:"Тип решетки",orientation:"data-top"},
                            {value:"NA",expand:"Цвет решетки",orientation:"data-bottom"},
                        ].map((element)=>(
                            <li class="relative hover:bg-neutral-50 p-2 md:p-4 rounded-xl group" data-top> 
                                {element.value}
                                <span class="absolute block text-lg md:text-2xl font-medium left-1/2 -translate-x-1/2 transition-transform
                                group-even:-bottom-24 
                                group-odd:-top-24 
                                group-even:before:bottom-10
                                group-odd:before:top-10
                                before:content-[''] before:border-l before:h-12 before:block before:absolute before:border-neutral-400 before:left-1/2">{element.expand}</span>
                            </li>
                        ))


                    }
                    
                </ul>
                <div class="absolute inset-0  top-0 left-0 blur-4xl -z-10">
                    <div class="inset-0 -translate-x-4 translate-y-4 bg-primary absolute rounded-full"></div>
                    <div class="inset-0 translate-x-16 -translate-y-8 bg-neutral-50 absolute rounded-full"></div>
                </div>
                <LogoSmall class="absolute  left-1/2 -translate-x-1/2 w-[800px] text-neutral-50/20 top-0 -z-10 "/>
            </div>
        </section>
        <!-- calculator -->
        <Contact/>
        <Calculator class="snap-center"/>
</Layout>
